.root
    padding-left 2u
    padding-right 2u
    box-sizing border-box
    max-width 100%
    min-width auto
    width 100%
    margin-bottom 8u
    +tablet()
        flex-direction row
    &.nofull
        flex-direction column
        min-width 40u
        max-width 60u
        margin-bottom 6u
        +tablet()
            flex 1
        +wide()
            min-width 25u
.image
    background-image url('/img/pic1.jpg')
    background-size cover
    background-position center center
    background-repeat no-repeat
    min-height 44u
    width 100%
    +tablet()
        &.full
            min-height 48u
            flex 0 0 320px
    +wide()
        min-height 30u

.info 
    margin-top 2u
    +tablet()
        &.full
            margin-left 4u
            flex 1

.infoMain
    justify-content space-between
    &.full
        flex-direction column
.infoName
    color #5d5d5d
    font-size 2u
    font-weight 600
    &.full
        font-size 3u
        color #191919
.infoCost
    color #ee3333
    font-weight 600
    font-size 2u
    &.full
        color #b5b5b5
        font-size 3u
        margin-top 2u
.category
    color #474747
    font-size 2u
    margin-top 2u
.description
    color #818181
    font-size 2u
    margin-top 3u
.buttons
    margin-top 3u
    
.button.last
    margin-left 2u