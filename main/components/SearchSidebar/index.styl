.wrapper
    background: rgba(0, 0, 0, 0.92)
    width 100%
    height 100%
    justify-content center
    align-items center

.root
    justify-content center
    height 100%
    padding 4u 5u
    width 100%
    +tablet()
        width 62u
    +wide()
        width 100u

.closeButton
    position absolute
    top 3u
    right 5u
    align-self flex-end
    width auto
    border none

.search
    flex-direction row
    align-items center
    background-color transparent
    padding-bottom 2u
    border-bottom 1px white solid
    margin 2u

.searchInput
    margin-right 2u
    border none
    flex 1
    user-select none
    color white
    padding 2u